<h1>Listing meal_days</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Date</th>
      <th>Breakfast</th>
      <th>Lunch</th>
      <th>Dinner</th>
      <th>Snack</th>
      <th>Meal plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meal_days.each do |meal_day| %>
      <tr>
        <td><%= meal_day.day %></td>
        <td><%= meal_day.date %></td>
        <td><%= meal_day.breakfast %></td>
        <td><%= meal_day.lunch %></td>
        <td><%= meal_day.dinner %></td>
        <td><%= meal_day.snack %></td>
        <td><%= meal_day.meal_plan %></td>
        <td><%= link_to 'Show', meal_day %></td>
        <td><%= link_to 'Edit', edit_meal_day_path(meal_day) %></td>
        <td><%= link_to 'Destroy', meal_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

