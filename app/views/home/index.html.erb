<% if !user_signed_in? %>
	<div class="highlighted-block">
		<%= link_to 'Sign In', new_user_session_path, class: 'btn trainer', id: 'sign-in' %>
		<%= link_to 'Sign up', new_user_registration_path, class: 'btn client', id: 'sign-up' %>
	</div>
	<div class="row">
	<div class="col-md-6 col-xs-12">
		<h1>PaperLess.pt</h1>
		<p>
			<h2>Benefits</h2>
			<ul class="h4">
				<li>You have a dedicated PT making programs that fit you.</li>
				<li>You can follow the next program anytime, don't need to wait your PT to available when you're not.</li>
				<li>Easy to use, no need to install another app.</li>
			</ul>
			<br>
		</p>
	</div>

	<div class="col-md-6 col-xs-12">
	<p class="text-center">
		<%=image_tag 'front.png', class: "splash-image" %>
	</p>
	</div>

<% else %>
<h3>List of programmes (Assigned)</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Due date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @programmes.reverse_order.each do |programme| %>
        <% if programme.client == current_user.id %>
          <tr>
            <td><%= link_to programme.description, programme %></td>
            <td><%= programme.due_date %></td>
            <td><%= programme.programme_status %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<% end %>



</div>