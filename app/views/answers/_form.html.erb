<%= simple_form_for( @answer, url: answers_path(:question_id => params[:question_id]) ) do |f| %>
  <%= f.error_notification %>
  	<div class="form-group">
  		<%= @question.content%>
    	<%= f.input :content, label: false, input_html: { class: 'form-control' }, placeholder: "Your answer" %>
  	</div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
