<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>
    <div class="panel panel-default">
      <div class="panel-heading">
      <div class="row">
            <!-- form for the messages -->
          <div class="col-md-9">
            <% if @receiver %>
              <h3>Send a message to <%= link_to @receiver.profile.first_name, profile_path(@receiver.profile) %></h3>
              
            <!-- else user need to select the company -->
            <% else %>
              <div class="form-group">
              Choose your receiver:
                <%= f.collection_select :receiver_id, User.all, :id, :email, prompt: 'Select a client' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-10">
            <%= f.input :receiver_id, as: :hidden, input_html: { value: @receiver.id } %>
            <%= f.input :content, label: false, input_html: { class: 'form-control' }%>
          </div>
          <div class="col-md-2">
            <%= f.submit 'Send', class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
<% end %>
