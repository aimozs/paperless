<h1>Listing meal_journals</h1>

<table>
  <thead>
    <tr>
      <th>Meal day</th>
      <th>Date</th>
      <th>Meal</th>
      <th>Ate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meal_journals.each do |meal_journal| %>
      <tr>
        <td><%= meal_journal.meal_day %></td>
        <td><%= meal_journal.date %></td>
        <td><%= meal_journal.meal %></td>
        <td><%= meal_journal.ate %></td>
        <td><%= meal_journal.user %></td>
        <td><%= link_to 'Show', meal_journal %></td>
        <td><%= link_to 'Edit', edit_meal_journal_path(meal_journal) %></td>
        <td><%= link_to 'Destroy', meal_journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

