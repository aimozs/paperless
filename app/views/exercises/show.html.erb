<p id="notice"><%= notice %></p>
<%= link_to '<', :back, class:'btn btn-info' %>
<%= link_to 'Edit', edit_exercise_path(@exercise), class:'btn btn-info' %>
<p>
  <strong>Name:</strong>
  <%= @exercise.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @exercise.description %>
</p>

<% if @exercise.video? %>
	<div class="videoWrapper">
		<iframe class="youtube" src="//www.youtube.com/embed/<%= @exercise.video %>" frameborder="0" allowfullscreen></iframe>
	</div>
<% else %>
	<p>no video available</p>
<% end %>
