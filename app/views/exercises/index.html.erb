<h2><%= link_to 'New Exercise', new_exercise_path, class:'btn btn-info' %></h2>
<hr>
<h1>Listing exercises</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Video</th>
      <th>Delete?</th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= link_to exercise.name, exercise_path(exercise), class:'btn btn-info' %></td>
        <td><%= exercise.description %></td>
        <% if exercise.video? %>
          <td><a href="http://www.youtube.com/watch?v=<%= exercise.video %>" target="_blank"><%= exercise.video %></a></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'X', exercise_path(exercise), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


