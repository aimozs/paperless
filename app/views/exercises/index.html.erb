<h2><%= link_to 'New Exercise', new_exercise_path, class:'btn btn-info' %></h2>
<hr>
<h1>Listing exercises</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Video</th>
      <th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= link_to exercise.name, exercise_path(exercise) %></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.video %></td>
        <td><%= link_to 'X', exercise_path(exercise), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


