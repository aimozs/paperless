<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<% if @spec.exercise.video? %>
  <div class="videoWrapper">
    <iframe class="youtube" src="//www.youtube.com/embed/<%= @spec.exercise.video %>" frameborder="0" allowfullscreen></iframe>
  </div>
  <hr>
<% end %>
<p>
  <strong>Exercise:</strong>
  <%= @spec.exercise.name + ' (' + @spec.time.strftime('%H:%M') + ')'%>
</p>
<p>
  <% if @spec.serie?  %>
    <%= @spec.serie %> sets
  <% end %>
  <% if @spec.rep? %>
     of <%= @spec.rep%> reps
  <% end %>
  <% if @spec.tempo? %>
     at <%= @spec.tempo %>
  <% end %>
</p>

<div class='row'>
  <div class='col-xs-6'>
    <%= link_to 'Cancel', @spec.programme, class:'btn btn-warning' %>
  </div>
  <div class='col-xs-6 text-right'>
    <%= link_to 'Done', @spec.programme, class:'btn btn-success' %>
  </div>
</div>