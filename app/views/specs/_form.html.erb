<%= simple_form_for(@spec) do |f| %>
  <%= f.error_notification %>

  	<div class="form-group">
    	<%= f.input :time, input_html: { class: 'form-control' } %>
  	</div>
  	<div class="form-group">
    	<%= f.input :serie, input_html: { class: 'form-control' } %>
  	</div>
  	<div class="form-group">
    	<%= f.input :rep, input_html: { class: 'form-control' } %>
  	</div>
  	<div class="form-group">
    	<%= f.input :tempo, input_html: { class: 'form-control' } %>
  	</div>
  	<% if @programme_id %>
      <%= f.input :programme_id, input_html: { value: @programme_id } %>
    <% end %>
  	<div class="form-group">
    	<%= f.association :exercise, input_html: { class: 'form-control' } %>
  	</div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
