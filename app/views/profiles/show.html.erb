<p id="notice"><%= notice %></p>

  <%= link_to '<', programmes_path, class:'btn btn-primary' %>
  <% if current_user.has_role? :admin %>
    <%= link_to 'Back to Admin', profiles_path, class:'btn btn-warning' %>
  <% end %>

<% if current_user == @profile.user %>
  <h2><%= link_to 'Edit', edit_profile_path(@profile), class:'btn btn-default' %></h2>
<% end %>

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @profile.dob %>
</p>

<p>
  <strong>Height:</strong>
  <%= @profile.height %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @profile.weight %>
</p>

<p>
  <strong>Social:</strong>
  <%= @profile.social %>
</p>

<p>
  <strong>User:</strong>
  <%= @profile.user.email %>
</p>

<% if (current_user.has_role? :trainer) && (@profile.user != current_user) && (!current_user.training?(@profile.user))%>
    <%= form_for(current_user.relationships.build(client_id: @profile.user.id)) do |f| %>
      <div><%= f.hidden_field :client_id %></div>
      <%= f.submit "Enroll " + @profile.first_name.capitalize, class: "btn btn-large btn-success" %>
    <% end %>
<% end %>

<% if (current_user.has_role? :admin) && (@profile.user != current_user) %>
<p style="text-align:right;">
  <% if @profile.user.has_role? :trainer %>
    <%= link_to 'Downgrade', downgrade_profile_path, class:'btn btn-danger' %>
  <% else %>
    <%= link_to 'Promote', promote_profile_path, class:'btn btn-primary' %>
  <% end %>
</p>
<% end %>

