<p id="notice"><%= notice %></p>

<h2>
  <%= link_to 'Back to programmes', programmes_path, class:'btn btn-primary' %>
  <% if current_user.has_role? :admin %>
    <%= link_to 'Back to Admin', profiles_path, class:'btn btn-warning' %>
  <% end %>
</h2>

<% if current_user == @profile.user %>
  <h2><%= link_to 'Edit', edit_profile_path(@profile), class:'btn btn-default' %></h2>
<% end %>

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @profile.dob %>
</p>

<p>
  <strong>Height:</strong>
  <%= @profile.height %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @profile.weight %>
</p>

<p>
  <strong>Link:</strong>
  <%= @profile.link %>
</p>

<p>
  <strong>User:</strong>
  <%= @profile.user.email %>
</p>

<p>
  <strong>Role:</strong>
  <% @profile.user.roles.each do |role| %>
    <%= role.name %>
  <% end %>
  <% if (current_user.has_role? :admin) && (@profile.user != current_user) %>
  <p style="text-align:right;">
    <% if @profile.user.has_role? :trainer %>
      <%= link_to 'Downgrade', downgrade_profile_path, class:'btn btn-danger' %>
    <% else %>
      <%= link_to 'Promote', promote_profile_path, class:'btn btn-primary' %>
    <% end %>
  </p>
  <% end %>
</p>
