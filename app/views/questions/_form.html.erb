<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>
	<div class="row">
	  	<div class="col-md-10 col-xs-9">
	    	<%= f.input :content, label: false, input_html: { class: 'form-control' } %>
	  	</div>

	  <div class="col-md-2 col-xs-3">
	    <%= f.submit 'Submit', class: 'btn btn-primary' %>
	  </div>
	 </div>
<% end %>
