<h1>Choose a client:</h1>

<% @users.each do |user| %>
  <ul>
    <li><%= link_to user.email, profile_path(user.id) %></li>
  </ul>
<% end %>
<hr>

<h1>List of programmes</h1>
<br>
<%= link_to 'New programme', new_programme_path, class:'btn btn-success' %>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programmes.reverse_order.each do |programme| %>
      <tr>
        <td><%= link_to programme.description, programme %></td>
        <td><%= programme.due_date %></td>
        <td><%= programme.user.profile.first_name %></td>
        <td><%= link_to 'Edit', edit_programme_path(programme) %></td>
      </tr>

    <% end %>
  </tbody>
</table>
